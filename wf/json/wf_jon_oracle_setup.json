    "actions": {
        "@end": {},
        "create_jon_db": {
            "json": {
                "oracle": {
                    "tablespace_size": "5G"
                },
                "run_list": [
                    "role[cd_jon_create_db]"
                ]
            },
            "type": "chef-solo",
            "nodes": {
                "type": "LIST",
