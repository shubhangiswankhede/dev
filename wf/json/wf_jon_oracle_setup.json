        },
        "get_oracle_vm": {
            "nodes": {
                "type": "LIST",
                "node_list": "oracle_nodes"
            },
            "type": "vm-provision",
            "simulate": false
        },
        "jon_config": {
            "json": {
                "jon": {
                    "agent_ip": "@nodes/jon1/ip",
                    "db_connection_url": "jdbc:oracle:thin:@#{@nodes/oracle1/ip}:1521:JONMYS01",
                    "qa_env": true,
                    "server_ip": "@nodes/jon1/ip"
                },
                "run_list": [
                    "role[cd_jon_config]"
                ]
            },
            "type": "chef-solo",
            "nodes": {
                "type": "LIST",
                "node_list": "jon_nodes"
            }
        },
        "oracle_setup": {
            "json": {
                "run_list": [
                    "role[cd_oracle_config]"
                ]
            },
            "type": "chef-solo",
            "nodes": {
                "type": "LIST",
                "node_list": "oracle_nodes"
            }
        }
